---
// src/components/TechCard.astro
const { name, color } = Astro.props;
---

<div class="bg-white dark:bg-gray-800 border-4 border-black dark:border-white p-4 rounded-2xl shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] dark:shadow-[4px_4px_0px_0px_rgba(255,255,255,0.2)] flex items-center justify-center gap-3 hover:-translate-y-2 transition-all duration-300 cursor-default group">
  <div class={`w-4 h-4 rounded-full border-2 border-black dark:border-white ${color} group-hover:animate-ping`}></div>
  
  <span class="font-black text-sm uppercase tracking-tight text-black dark:text-white">{name}</span>
</div>