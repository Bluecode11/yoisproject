---
// src/components/TechCard.astro
const { name, color } = Astro.props;
---

<div class="bg-black/90 dark:bg-gray-800 border-4 border-white shadow-[4px_4px_0px_0px_rgba(255,255,255,0.5)] dark:shadow-[4px_4px_0px_0px_rgba(255,255,255,0.2)] p-2 md:px-4 md:py-3 rounded-2xl flex flex-col md:flex-row items-center justify-center gap-1 md:gap-3 hover:scale-105 transition-transform">

    <span class={`w-3 h-3 md:w-4 md:h-4 rounded-full border-2 border-white shrink-0 animate-pulse ${color}`}></span>

    <span class="font-black text-white uppercase text-xs md:text-base text-center tracking-wide leading-tight break-words">{name}</span>
</div>