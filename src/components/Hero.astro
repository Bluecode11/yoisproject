---
// src/components/Hero.astro
import { personalInfo, socials } from '../data/portfolio.js';
---

<section id="hero" class="min-h-[80vh] flex flex-col md:flex-row items-center justify-between gap-10 md:gap-0 reveal">
    
    <div class="w-full md:w-1/2 space-y-6 text-center md:text-left">
        
        <h1 class="text-5xl md:text-7xl font-black leading-none uppercase italic text-black dark:text-white">
            Hello! <br class="md:hidden"/> I am <span class="text-blue-600 dark:text-blue-400 underline decoration-[6px] md:decoration-10 decoration-black dark:decoration-white">{personalInfo.name}.</span>
        </h1>

        <p class="text-lg md:text-xl text-gray-600 dark:text-gray-300 max-w-lg leading-relaxed font-bold">
            {personalInfo.desc}
        </p>

        <div class="flex justify-center md:justify-start">
            <a href="/cv.pdf" download="CV_Joel_Rizky.pdf" class="inline-flex items-center gap-2 bg-yellow-400 border-4 border-black px-6 py-3 font-black text-black text-lg rounded-xl shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:-translate-y-1 hover:shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] transition-all dark:shadow-[4px_4px_0px_0px_rgba(255,255,255,0.5)]">
                <span>Download CV</span>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M12 12.75l-3.25-3.25m3.25 3.25l3.25-3.25M12 12.75V3" />
                </svg>
            </a>
        </div>

       <div class="flex gap-4 justify-center md:justify-start pt-4">
            
            <a href={`mailto:${socials.email}`} class="p-3 bg-white text-black border-2 border-black rounded-lg hover:bg-blue-500 hover:text-white transition-all shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/></svg>
            </a>

            <a href={socials.linkedin} target="_blank" class="p-3 bg-white text-black border-2 border-black rounded-lg hover:bg-blue-700 hover:text-white transition-all shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
            </a>

            <a href={socials.github} target="_blank" class="p-3 bg-white text-black border-2 border-black rounded-lg hover:bg-gray-800 hover:text-white transition-all shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.332-5.467-5.93 0-1.31.465-2.38 1.235-3.221-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.221 0 4.609-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
            </a>

            <a href={socials.instagram} target="_blank" class="p-3 bg-white text-black border-2 border-black rounded-lg hover:bg-pink-500 hover:text-white transition-all shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.358-.2 6.78-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg>
            </a>
            
        </div>
    </div>

    <div class="w-full md:w-1/2 flex justify-center md:justify-end group">
        <div class="relative">
            <div class="absolute inset-0 bg-black dark:bg-white rounded-3xl translate-x-4 translate-y-4"></div>
            
            <img 
                src="/profile.jpg" 
                alt="Foto Joel Rizky" 
                class="relative w-64 h-64 md:w-80 md:h-80 object-cover rounded-3xl border-4 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] dark:border-white dark:shadow-[4px_4px_0px_0px_rgba(255,255,255,0.2)] animate-wiggle transition-all duration-300 bg-white"
            />
        </div>
    </div>

</section>

<style>
  @keyframes wiggle {
    0% { transform: rotate(3deg); }
    50% { transform: rotate(-3deg); }
    100% { transform: rotate(3deg); }
  }

  .animate-wiggle {
    animation: wiggle 4s ease-in-out infinite;
  }

  .group:hover .animate-wiggle {
    animation-play-state: paused;
    transform: rotate(0deg);
  }
</style>