<button
    id="back-to-top"
    aria-label="Back to Top"
    class="fixed bottom-6 right-6 md:bottom-10 md:right-10 bg-yellow-400 dark:bg-blue-600 text-black dark:text-white border-4 border-black dark:border-white p-3 rounded-xl shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] dark:shadow-[4px_4px_0px_0px_rgba(255,255,255,0.2)] hover:-translate-y-2 hover:shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] transition-all z-50 opacity-0 invisible translate-y-10"
>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="4" stroke="currentColor" class="w-6 h-6 md:w-8 md:h-8">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 10.5 12 3m0 0 7.5 7.5M12 3v18" />
    </svg>
</button>

<script>
    const backToTopBtn = document.getElementById('back-to-top');

    if (backToTopBtn) {
        // 1. Munculkan tombol saat scroll lebih dari 300px
        window.addEventListener('scroll', () => {
            if (window.scrollY > 300) {
                backToTopBtn.classList.remove('opacity-0', 'invisible', 'translate-y-10');
            } else {
                backToTopBtn.classList.add('opacity-0', 'invisible', 'translate-y-10');
            }
        });

        // 2. Fungsi klik untuk scroll ke atas
        backToTopBtn.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
    }
</script>