---
// src/components/Footer.astro
import { personalInfo, socials } from '../data/portfolio.js';
---

<footer class="mt-32 max-w-5xl mx-auto px-6 pb-12 reveal">
    <div class="bg-white dark:bg-gray-800 border-4 border-black dark:border-white rounded-3xl p-8 md:p-12 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] dark:shadow-[8px_8px_0px_0px_rgba(255,255,255,0.2)]">
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-10 md:gap-8">
            
            <div class="space-y-4">
                <span class="font-black text-3xl tracking-tighter italic text-black dark:text-white">JOEL.</span>
                <p class="font-bold text-gray-600 dark:text-gray-300">
                    {personalInfo.role}
                </p>
                <div class="flex gap-4 pt-2">
                    <a href={`mailto:${socials.email}`} class="text-black dark:text-white hover:-translate-y-1 hover:text-blue-500 transition-all">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/></svg>
                    </a>
                    <a href={socials.linkedin} target="_blank" class="text-black dark:text-white hover:-translate-y-1 hover:text-blue-500 transition-all">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
                    </a>
                    <a href={socials.github} target="_blank" class="text-black dark:text-white hover:-translate-y-1 hover:text-blue-500 transition-all">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.332-5.467-5.93 0-1.31.465-2.38 1.235-3.221-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.221 0 4.609-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                    </a>
                    <a href={socials.instagram} target="_blank" class="text-black dark:text-white hover:-translate-y-1 hover:text-blue-500 transition-all">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.358-.2 6.78-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg>
                    </a>
                </div>
            </div>

            <div class="flex flex-col gap-3">
                <h4 class="font-black text-gray-400 uppercase tracking-widest text-sm mb-2">The Website</h4>
                <a href="#hero" class="font-bold text-black dark:text-white hover:text-blue-500 hover:translate-x-2 transition-all w-fit">Home</a>
                <a href="#skills" class="font-bold text-black dark:text-white hover:text-blue-500 hover:translate-x-2 transition-all w-fit">Tech Stack</a>
                <a href="#experience" class="font-bold text-black dark:text-white hover:text-blue-500 hover:translate-x-2 transition-all w-fit">Experience</a>
                <a href="#projects" class="font-bold text-black dark:text-white hover:text-blue-500 hover:translate-x-2 transition-all w-fit">Projects</a>
            </div>

            <div class="flex flex-col gap-3">
                <h4 class="font-black text-gray-400 uppercase tracking-widest text-sm mb-2">Resources</h4>
                <a href={socials.github} target="_blank" class="font-bold text-black dark:text-white hover:text-blue-500 hover:translate-x-2 transition-all w-fit flex items-center gap-2">GitHub <span class="text-xl">↗</span></a>
                <a href={socials.linkedin} target="_blank" class="font-bold text-black dark:text-white hover:text-blue-500 hover:translate-x-2 transition-all w-fit flex items-center gap-2">LinkedIn <span class="text-xl">↗</span></a>
                <a href={`mailto:${socials.email}`} class="font-bold text-black dark:text-white hover:text-blue-500 hover:translate-x-2 transition-all w-fit flex items-center gap-2">Email Me <span class="text-xl">↗</span></a>
            </div>

        </div>

        <div class="mt-10 pt-6 border-t-4 border-black dark:border-white flex flex-col md:flex-row justify-between items-center font-bold text-sm text-gray-600 dark:text-gray-300">
            <p>© {new Date().getFullYear()} {personalInfo.name}. All rights reserved.</p>
            <p class="mt-2 md:mt-0">Built with Astro & Tailwind.</p>
        </div>

    </div>
</footer>