---
// src/components/Marquee.astro
const text = "OPEN TO WORK  ✦  FULL STACK DEVELOPER  ✦  IT ENTHUSIAST  ✦  PROBLEM SOLVER  ✦  ";
---

<div class="relative flex overflow-x-hidden bg-black dark:bg-white border-y-4 border-black dark:border-white py-3 md:py-4 -rotate-1 z-10 mb-20 shadow-[4px_4px_0px_0px_rgba(0,0,0,0.2)]">
  
  <div class="animate-marquee whitespace-nowrap flex items-center">
    <span class="text-2xl md:text-4xl font-black text-white dark:text-black mx-4">{text}</span>
    <span class="text-2xl md:text-4xl font-black text-white dark:text-black mx-4">{text}</span>
    <span class="text-2xl md:text-4xl font-black text-white dark:text-black mx-4">{text}</span>
    <span class="text-2xl md:text-4xl font-black text-white dark:text-black mx-4">{text}</span>
  </div>

  <div class="absolute top-0 py-3 md:py-4 animate-marquee2 whitespace-nowrap flex items-center">
    <span class="text-2xl md:text-4xl font-black text-white dark:text-black mx-4">{text}</span>
    <span class="text-2xl md:text-4xl font-black text-white dark:text-black mx-4">{text}</span>
    <span class="text-2xl md:text-4xl font-black text-white dark:text-black mx-4">{text}</span>
    <span class="text-2xl md:text-4xl font-black text-white dark:text-black mx-4">{text}</span>
  </div>

</div>

<style>
  .animate-marquee {
    animation: marquee 25s linear infinite;
  }
  .animate-marquee2 {
    animation: marquee2 25s linear infinite;
  }

  @keyframes marquee {
    0% { transform: translateX(0%); }
    100% { transform: translateX(-100%); }
  }
  @keyframes marquee2 {
    0% { transform: translateX(100%); }
    100% { transform: translateX(0%); }
  }
</style>