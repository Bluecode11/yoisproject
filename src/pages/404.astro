---
// src/pages/404.astro
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
---

<Layout title="404 | Page Not Found">
    
    <Navbar />

    <main class="min-h-screen flex items-center justify-center px-6 reveal">
        <div class="text-center max-w-2xl mt-10">
            
            <h1 class="text-[10rem] md:text-[12rem] font-black leading-none text-transparent bg-clip-text bg-linier-to-r from-blue-500 to-purple-500 drop-shadow-[8px_8px_0px_rgba(0,0,0,1)] dark:drop-shadow-[8px_8px_0px_rgba(255,255,255,0.5)] transform -rotate-6 select-none">
                404
            </h1>

            <div class="bg-white dark:bg-gray-800 border-4 border-black dark:border-white p-8 rounded-3xl shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] dark:shadow-[8px_8px_0px_0px_rgba(255,255,255,0.2)] relative z-10 rotate-2">
                <h2 class="text-3xl md:text-4xl font-black uppercase mb-4 italic">Oops! Lost in Space? ğŸ›¸</h2>
                <p class="text-lg md:text-xl font-bold text-gray-600 dark:text-gray-300 mb-8">
                    The page you are looking for doesn't exist or has been moved to another dimension.
                </p>

                <a href="/" class="inline-block bg-yellow-400 text-black text-xl font-black px-8 py-4 border-4 border-black rounded-xl shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:-translate-y-1 hover:shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] transition-all">
                    BACK TO HOME ğŸ 
                </a>
            </div>

        </div>
    </main>

</Layout>