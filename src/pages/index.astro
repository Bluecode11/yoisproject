---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import Experience from '../components/Experience.astro';
import Footer from '../components/Footer.astro';

// Take Data Komponen
import { personalInfo, skills, projects } from '../data/portfolio.js';
import TechCard from '../components/TechCard.astro';
---

<Layout title={`Portofolio | ${personalInfo.name}`}>
	
	<Navbar />

	<main class="max-w-5xl mx-auto px-6 pt-32 pb-20">
		
		<Hero />

		<section id="skills" class="mt-20 md:mt-24 reveal">
			<div class="flex flex-col items-center mb-8 md:mb-12">
				<h2 class="text-2xl md:text-3xl font-black uppercase italic text-center bg-white text-black border-4 border-black px-6 py-2 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] -rotate-1 dark:bg-gray-800 dark:text-white dark:border-white dark:shadow-[4px_4px_0px_0px_rgba(255,255,255,0.2)]">Keahlian & Tools ğŸ› ï¸</h2>
			</div>
            
            <div class="grid grid-cols-2 md:grid-cols-4 gap-3 md:gap-6">
				{skills.map(skill => <TechCard name={skill.name} color={skill.color} />)}
			</div>
		</section>

		<Experience />

		<section id="projects" class="mt-20 md:mt-24 reveal">
			<h2 class="text-3xl md:text-4xl font-black uppercase text-center mb-8 md:mb-10">Proyek Kuliah ğŸ’»</h2>
			
			<div class="flex flex-wrap justify-center gap-6">
				{projects.map((p) => (
					<div class={`w-full md:w-[300px] ${p.color} border-4 border-black p-6 rounded-3xl shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] dark:border-white dark:shadow-[6px_6px_0px_0px_rgba(255,255,255,0.2)] hover:-translate-y-2 transition-transform`}>
						
                        <img 
                            src={p.image} 
                            alt={p.title} 
                            class="w-full h-40 object-cover rounded-xl mb-4 border-2 border-black dark:border-white shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transition-transform hover:scale-105"
                        />

						<h3 class="text-2xl font-black mb-2 uppercase text-black">{p.title}</h3>
						<p class="font-bold text-black/80">{p.desc}</p>
					</div>
				))}
			</div>
		</section>

		<section id="contact" class="mt-24 md:mt-32 reveal text-center">
			<div class="bg-blue-400 dark:bg-blue-600 border-4 border-black dark:border-white p-8 md:p-12 rounded-[30px] md:rounded-[40px] shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] dark:shadow-[12px_12px_0px_0px_rgba(255,255,255,0.2)] max-w-3xl mx-auto">
				<h2 class="text-3xl md:text-5xl font-black text-white mb-6 uppercase italic">Lets Work Together!</h2>
				<p class="font-bold text-lg text-white mb-8">WA: {personalInfo.whatsapp} | Email: {personalInfo.email}</p>
				<a href={`mailto:${personalInfo.email}`} class="inline-block bg-white border-4 border-black px-8 py-4 md:px-12 md:py-5 font-black text-lg md:text-2xl rounded-2xl hover:scale-105 transition-all text-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">Email Me ğŸ“§</a>
			</div>
		</section>

	</main>

	<Footer />

</Layout>